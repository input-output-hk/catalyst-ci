tool-wasmtime:
    FROM ../+rust-base
    RUN cargo install --git https://github.com/bytecodealliance/wasmtime --tag v17.0.0 verify-component-adapter --locked
    SAVE ARTIFACT /usr/local/cargo/bin/verify-component-adapter verify-component-adapter