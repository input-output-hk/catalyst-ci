{
    "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
    "version": "0.2",
    "enabled": true,
    "language": "en,en-US",
    "useGitignore": true,
    "dictionaryDefinitions": [
        {
            "name": "project-words",
            "path": ".config/dictionaries/project.dic",
            "description": "Words used in this project.",
            "addWords": true
        }
    ],
    "dictionaries": [
        "project-words",
        "companies",
        "cryptocurrencies",
        "cryptography",
        "networkingTerms",
        "rust",
        "softwareTerms",
        "python",
        "bash",
        "typescript",
        "html",
        "css",
        "golang",
        "UTXO",
        "mithril",
        "Arbritrary",
        "iohk",
        "dalek",
        "Keyhash",
        "Scripthash",
        "vkey",
        "cbor",
        "metamap",
    ],
    "ignorePaths": [
        ".config/dictionaries",
        ".github",
        "earthly/docs/poetry.lock",
        "actions/*/dist",
        "cli/go.sum",
        "cli/go.mod",
        "cli/bin/ci",
        ".git",
        ".gitignore",
        ".markdownlint.jsonc",
        ".markdownlint-cli2.jsonc",
        ".envrc",
        "cspell.json",
        "**/**/go.mod",
        "**/**/go.sum",
        "**/**/pyproject.toml",
        "examples/flutter/example/**",
    ]
}